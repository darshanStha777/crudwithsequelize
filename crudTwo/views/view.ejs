<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>

<body>
    <div class="container-fluid">
        <section class="container">
            <nav class="navbar navbar-expand-lg navbar-light ">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#"></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>

                    <div class="collapse navbar-collapse  justify-content-center" id="navbarNav">

                        <ul class="navbar-nav justify-content-center ">

                            <li class="nav-item">
                                <a class="nav-link " href="/">Add user</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/view">View User</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/update">Update User</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/delete">Delete User</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </section>
        <section class="viewtable mt-5">
            <div class="row">
                <div class="col-6 offset-3 ">
                    <table class="table bg-dark text-light p-2 ">
                        <thead>
                            <tr>
                                <th scope="col ">#</th>
                                <th scope="col ">User Name</th>
                                <th scope="col ">Email</th>
                                <th scope="col ">Password</th>
                                <th scope="col " colspan="2">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i = 0; i < userdatas.length; i++) {%>
                                <tr>
                                    <th scope="row ">
                                        <%=  i+1 %>
                                    </th>
                                    <td>
                                        <%=  userdatas[i].username %>
                                    </td>
                                    <td>
                                        <%=  userdatas[i].email %>

                                    </td>
                                    <td>
                                        <%=  userdatas[i].password %>

                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-primary p-1"> <a href="/update/<%= userdatas[i].id %>">update</a> </button>
                                    </td>
                                    <td>
                                        <button type="button" class="btn btn-danger p-1"><a href="/delete/<%= userdatas[i].id %>">Delete</a></button> </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                </div>
            </div>



        </section>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js " integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p " crossorigin="anonymous "></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js " integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF " crossorigin="anonymous "></script>
</body>

</html>